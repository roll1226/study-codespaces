{
  "name": "NestJS Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    3000
  ],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "nestjs.nestjs-files",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "Github.copilot",
        "Github.copilot-chat"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  }
}
